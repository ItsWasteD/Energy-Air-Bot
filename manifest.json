{
  "name": "Energy Air Bot",
  "version": "1.0",
  "description": "Automated bot for the 'Energy Air Game'",
  "manifest_version": 2,
  "author": "David Roth",
  "homepage_url": "https://game.energy.ch/",

  "content_scripts": [{
    "matches": ["http://*.energy.ch/*", "https://*.energy.ch/*"],
    "js": ["NRJ.js"]
    }],

  "permissions": ["http://*.energy.ch/*", "https://*.energy.ch/*"],

  "icons": {
    "16": "images/favicon_16.png",
    "32": "images/favicon_32.png",
    "48": "images/favicon_48.png",
    "128": "images/favicon_128.png"
  }
}
